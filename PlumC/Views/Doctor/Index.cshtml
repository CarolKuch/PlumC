@model IEnumerable<PlumC.Models.Doctor>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Create", "Doctor")'">
    Add doctor
</button>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Specialization.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Specialization.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
